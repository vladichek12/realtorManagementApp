    <filter>
        <filter-name>adminAuthenticationFilter</filter-name>
        <filter-class>realtorManagementApp.web.filter.AdminAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminAuthenticationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/greeting</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>userAuthenticationFilter</filter-name>
        <filter-class>realtorManagementApp.web.filter.UserAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>userAuthenticationFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/greeting</url-pattern>
    </filter-mapping>


    <error-page>
        <location>/WEB-INF/pages/error404.jsp</location>
        <error-code>404</error-code>
    </error-page>
    <error-page>
        <location>/WEB-INF/pages/error401.jsp</location>
        <error-code>401</error-code>
    </error-page>

