<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Realtor web-app</display-name>

    <servlet>
        <servlet-name>loginPageServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.LoginPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginPageServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrationServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.RegistrationPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminCustomerPageServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.AdminCustomerPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminCustomerPageServlet</servlet-name>
        <url-pattern>/admin/customers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminRealtorsPageServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.AdminRealtorPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminRealtorsPageServlet</servlet-name>
        <url-pattern>/admin/realtors</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminOrderPageServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.AdminOrderPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminOrderPageServlet</servlet-name>
        <url-pattern>/admin/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminAddOrderServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.AdminAddOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminAddOrderServlet</servlet-name>
        <url-pattern>/adminAddOrder/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>defaultUserServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.DefaultUserPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>defaultUserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addRoomServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.AddRoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addRoomServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteRoomServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.DeleteRoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteRoomServlet</servlet-name>
        <url-pattern>/deleteRoom/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updateRoomServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.UpdateRoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateRoomServlet</servlet-name>
        <url-pattern>/updateRoom/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logOutServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logOutServlet</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>infoServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.InfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>infoServlet</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>contactsServlet</servlet-name>
        <servlet-class>realtorManagementApp.web.ContactsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contactsServlet</servlet-name>
        <url-pattern>/contacts</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>adminAuthenticationFilter</filter-name>
        <filter-class>realtorManagementApp.web.filter.AdminAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminAuthenticationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>userAuthenticationFilter</filter-name>
        <filter-class>realtorManagementApp.web.filter.UserAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>userAuthenticationFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>


    <error-page>
        <location>/WEB-INF/pages/error404.jsp</location>
        <error-code>404</error-code>
    </error-page>
    <error-page>
        <location>/WEB-INF/pages/error401.jsp</location>
        <error-code>401</error-code>
    </error-page>

</web-app>
